{
    "name": "remote-extension",
    "version": "1.0.0",
    "description": "Chrome extension for automating remote job applications",
    "scripts": {
        "build": "webpack --config webpack.config.js",
        "start:server": "ts-node --transpile-only server/index.ts",
        "dev": "concurrently \"npm run build -- --watch\" \"npm run start:server\"",
        "create-icons": "node scripts/create-icons.js",
        "postinstall": "npm run create-icons",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@google/generative-ai": "^0.2.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@babel/preset-react": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/chrome": "^0.0.251",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.9.4",
        "@types/react": "^18.2.38",
        "@types/react-dom": "^18.2.17",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.31",
        "postcss-loader": "^7.3.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sharp": "^0.34.0",
        "style-loader": "^3.3.3",
        "tailwindcss": "^3.3.5",
        "ts-jest": "^29.3.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}